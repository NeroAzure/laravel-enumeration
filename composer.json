{
    "name": "sourceboat/laravel-enumeration",
    "type": "library",
    "description": "Simple, extensible and powerful enumeration implementation for Laravel, based on eloquent/enumeration.",
    "keywords": [
        "sourceboat",
        "enum",
        "enumeration",
        "laravel",
        "package",
        "validation",
        "localization",
        "typed",
        "extendible"
    ],
    "license": "MIT",
    "homepage": "https://github.com/sourceboat/laravel-enumeration",
    "authors": [
        {
            "name": "Kevin Buchholz",
            "email": "kevin@sourceboat.com",
            "homepage": "https://sourceboat.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "eloquent/enumeration": "^6.0",
        "laravel/framework": "5.7.*"
    },
    "require-dev": {
        "consistence/coding-standard": "3.7",
        "slevomat/coding-standard": "4.8.7",
        "squizlabs/php_codesniffer": "^3.4",
        "phpmd/phpmd": "^2.6",
        "phpunit/phpunit": "7.3.*",
        "orchestra/testbench": "3.7.*"
    },
    "autoload": {
        "psr-4": {
            "Sourceboat\\Enumeration\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sourceboat\\Enumeration\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs  -s & phpmd resources/lang,src,tests text phpmd.xml",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Sourceboat\\Enumeration\\EnumerationServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
